@model IEnumerable<CoffeeShop.Data.Models.Product>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="btn btn-outline-primary" asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmallImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div style="overflow: hidden; text-overflow: ellipsis;">
                    @Html.Raw(item.Description)
                </div>
            </td>
            <td>
                <img height="50" src="~/api/file/@Html.DisplayFor(modelItem => item.SmallImageId)" />
            </td>
            <td>
                <img height="50" src="~/api/file/@Html.DisplayFor(modelItem => item.BannerImageId)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <a class="m-1 btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                <a class="m-1 btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                <a class="m-1 btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
